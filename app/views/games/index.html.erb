<p id="notice"><%= notice %></p>

<h1>GAMES</h1>

<%= link_to 'New Game', new_game_path, class:"btn btn-primary btn-lg" %>
<br><br>
<div class="row">

    <% @games.each do |game| %>
    <div class="col">  
        <div class="card" style="width: 18rem;">
            <%= image_tag game.picture, class:"card-img-top" %>
                <div class="card-body">
                
                <tr>
                    <td><%= game.title %></td>
                    <td><%= game.description %></td>
                    <td>$<%= game.price %>
                    <td><%= game.genre %></td>
                    <td><%= link_to 'Show', game, class:"btn btn-primary" %></td>
                    <td><%= link_to 'Edit', edit_game_path(game), class:"btn btn-primary" %></td>
                </tr>
                </div>  
        </div>
    <div>
    <% end %>

